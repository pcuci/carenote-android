<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:parentActivityName="com.health.caresnap.MainActivity"
    tools:context="com.health.caresnap.com.health.caresnap.ui.PlanNewActivity">

    <TextView
        android:id="@id/date_time_textview"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:text="@string/date_time"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textStyle ="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New"
            android:id="@+id/addNewPractitioner"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/custom_button"
            style="@style/caresnap_button"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/doctor_prompt"
            android:id="@+id/physiciansSpinner"
            android:layout_toLeftOf="@+id/addNewPractitioner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle ="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <TextView
            android:id="@+id/clinic_name_label"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/clinic_name_label"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle ="bold"/>

        <EditText
            android:id="@+id/clinic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/clinic_name"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/note_new_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/note_new_button"
            android:background="@drawable/custom_button"
            style="@style/caresnap_button"/>

        <Button
            android:id="@+id/impression_new_save_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/plan_new_save_button"
            android:background="@drawable/custom_button"
            style="@style/caresnap_button" />
    </LinearLayout>

</LinearLayout>